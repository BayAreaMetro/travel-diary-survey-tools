    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Pipeline",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.processing.pipeline",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "config.yaml",
                "--steps",
                "link_trips,build_tours"
            ]
        }
    ]
}
